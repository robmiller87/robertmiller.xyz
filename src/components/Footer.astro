---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <Hr noPadding />
  <div
    class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4"
  >
    <Socials centered />
    <div class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row text-sm opacity-70">
      <span>© 2026 Robert Miller</span>
      <span class="hidden sm:inline mx-2">·</span>
      <a href="https://github.com/satnaing/astro-paper" target="_blank" rel="noopener noreferrer" class="hover:text-accent text-xs opacity-60">
        Built with AstroPaper
      </a>
    </div>
  </div>
</footer>
