---
export interface Props {
  type: "BlogPosting" | "Person" | "WebSite";
  data: any;
}

const { type, data } = Astro.props;

let structuredData = {};

if (type === "BlogPosting") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: data.title,
    description: data.description,
    author: {
      "@type": "Person",
      name: data.author || "Robert Miller",
      url: "https://robertmillerconsultancy.com/about",
    },
    datePublished: data.pubDatetime.toISOString(),
    dateModified: data.modDatetime?.toISOString() || data.pubDatetime.toISOString(),
    publisher: {
      "@type": "Person",
      name: "Robert Miller",
      logo: {
        "@type": "ImageObject",
        url: "https://robertmillerconsultancy.com/robert-avatar.png",
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": data.url,
    },
    image: data.ogImage || "https://robertmillerconsultancy.com/robert-avatar.png",
    articleSection: data.tags?.[0] || "Technology",
    keywords: data.tags?.join(", ") || "",
    wordCount: data.wordCount,
    timeRequired: data.readingTime,
  };
} else if (type === "Person") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Robert Miller",
    url: "https://robertmillerconsultancy.com",
    image: "https://robertmillerconsultancy.com/robert-avatar.png",
    sameAs: [
      "https://github.com/robmiller87",
      "https://x.com/rob_miller87",
      "https://www.linkedin.com/in/rm16/",
      "https://www.instagram.com/je_suis_robert_miller/",
    ],
    jobTitle: "Consultant",
    description:
      "Notes on technology, markets, and human systems — plus the occasional field report from real life.",
  };
} else if (type === "WebSite") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Robert Miller",
    url: "https://robertmillerconsultancy.com",
    description:
      "Notes on technology, markets, and human systems — plus the occasional field report from real life.",
    author: {
      "@type": "Person",
      name: "Robert Miller",
    },
    potentialAction: {
      "@type": "SearchAction",
      target: "https://robertmillerconsultancy.com/search?q={search_term_string}",
      "query-input": "required name=search_term_string",
    },
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
